<div class="main-page">
  <a href="/learn">
    <button class="learn-button">가르치러 가기</button>
  </a>
  <section class="chat">
    <div class="left">
      <div class="profile">
        <div class="icon"></div>
        <div class="name">Bot</div>
      </div>
      <div class="balloon">
        <div class="tail"></div>
        <div class="text">안녕하세요</div>
      </div>
    </div>
    <div class="right">
      <div class="profile">
        <div class="icon"></div>
        <div class="name">User</div>
      </div>
      <div class="balloon">
        <div class="tail"></div>
        <div class="text">네, 반갑습니다</div>
      </div>
    </div>
    <!--talks each do -->
    <% @chats.each do |p| %>
    <% if p.chat_type == "human" %>
    <div class="right">
      <div class="profile">
        <div class="icon"></div>
        <div class="name">User</div>
      </div>
      <div class="balloon">
        <div class="tail"></div>
        <div class="text"><%= p.chat_content %></div>
      </div>
    </div>
    <% end %>
    <% if p.chat_content == "사랑해" %>
    <div class="left">
      <div class="profile">
        <div class="icon"></div>
        <div class="name">Bot</div>
      </div>
      <div class="balloon">
        <div class="tail"></div>
        <div class"picture">
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/44/Coraz%C3%B3n.svg/220px-Coraz%C3%B3n.svg.png">
        </div>
      </div>
    </div>
    <% end %>
    <% if p.chat_type == "bot" %>
    <% if p.picurlchat != "" %>
    <div class="left">
      <div class="profile">
        <div class="icon"></div>
        <div class="name">Bot</div>
      </div>
      <div class="balloon">
        <div class="tail"></div>
        <div class"picture">
          <img src= <%= p.picurlchat %> height = "150" width="200">
        </div>
      </div>
    </div>
    <% end %>
    <div class="left">
      <div class="profile">
        <div class="icon"></div>
        <div class="name">Bot</div>
      </div>
      <div class="balloon">
        <div class="tail"></div>
        <div class="text"><%= p.chat_content %></div>
      </div>
    </div>
    <% end %>
    <% end %>
  </section>
  <%= form_tag '/talker', method: 'post', class: "chat-form" do %>
    <input type="text" placeholder="입력..." name="ask">
    <input type="submit" value="전송">
  <% end %>
</div>